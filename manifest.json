{
    "name": "Pas D'argents Pour Les VOD",
    "version": "0.5",
    "description": "FUCKLESUBONLY",
    "manifest_version": 3,
    "icons": {
        "128": "assets/icons/icon.png"
    },
    "action": {
        "default_popup": "src/content/watching_list.html"
    },
    "background": {
        "service_worker": "src/background.js"
    },
    "host_permissions": [
        "https://www.twitch.tv/*"
    ],
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "webNavigation"
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "https://www.twitch.tv/*"
            ],
            "js": [
                "src/scripts/video-7.20.2.min.js",
                "src/scripts/silvermine-videojs-quality-selector.min.js",
                "src/chat.js",
                "src/thumbnails.js",
                "src/app.js"
            ],
            "css": [
                "src/style/video-js-7.20.2.min.css",
                "src/style/custom.css",
                "src/style/chat.css"
            ]
        }
    ]
}
